                <MenuItem Header="Abrir Arquivo CEL/NRA 605" Click="MenuItemAbrir605_Click"></MenuItem>
                <MenuItem Header="Abrir Arquivo DAD 604" Click="MenuItemAbrirDAD604_Click"></MenuItem>
